<h1>My Lounge</h1>
<% @exercises.each do |exercise| %>
<h3>My daily exersise:  
    <strong><em><%= exercise.workout %></em></strong>
    Performed on
    <%= exercise.workout_date %>
    for: 
    <strong><%= exercise.duration_in_min %>
    minutes</strong>
</h3>
<% end %>
<br>
<hr>
<div class="col-md-8 col-xs-12">
  <%= link_to "New Workout", new_user_exercise_path(current_user), class: "btn btn-primary link" %>
</div>